<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FloowTextView" />

    <style name="FloowTextView.Name" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">22sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FloowTextView.DetailText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FloowTextView.DetailData" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.50dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="Divider.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.50dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
    </style>

    <style name="Tab.TextAppearance.White" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="FloowTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/Tab.TextAppearance.White</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorHeight">5dp</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="FloowButton" parent="android:Widget.Holo.Light.Button">
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:layout_marginTop">@dimen/margin_extra_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_extra_small</item>
        <item name="android:background">@drawable/btn_bg_transparent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingLeft">@dimen/margin_small</item>
        <item name="android:paddingRight">@dimen/margin_small</item>
    </style>
</resources>
